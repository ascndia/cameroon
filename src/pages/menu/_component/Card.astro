---
import { Image } from "astro:assets";
import Menu1 from "../../../assets/menu.jpg";
---

<div class="col">
  <div
    class="border-0 position-relative card gap-md-4 align-items-center d-flex flex-column flex-md-row"
  >
    <div class="img"><Image class={"w-100 h-100"} src={Menu1} alt="" /></div>
    <div class="card-body">
      <div class="card-title">Lele bakar</div>
      <div class="card-text">
        Java Jimmie Joe • I Need Coffee • Av ocado Creame Joe • Rum Raisin •
        Caramel Delight • Hazelnut Crave
      </div>
    </div>
    <div class="bg"></div>
  </div>
</div>
<style>
  .img {
    width: 360px;
    aspect-ratio: 1/1;
  }
  .col {
    padding-top: 28px;
    padding-bottom: 28px;
  }
  .bg {
    background-color: #F7F7F7;
    height: 130%;
    right: 0;
    width: 86%;
    position: absolute;
  }
  .card .card-title {
    color: #616161; !important
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 2px;
    text-transform: uppercase;

  }
  .card :not(:last-child) {
    z-index: 20;
  }
  .card-text {
    color: var(--secondary)
  }
  @media (max-width: 768px) {
    .img {
      width: 210px;
      aspect-ratio: 1/1;
    }
  .bg {
    width: 100%;
    height: 100%;

  }
  .card {
    padding-right: 24px;
    padding-left: 24px;
  }
  .card-body {
    margin-top: 36px;
  } 
  
}

</style>
